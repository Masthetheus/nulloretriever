configfile: "config/config.yaml"
import re

def sanitize_filename(name):
    return re.sub(r'[^A-Za-z0-9_]', '_', name)

organisms = config["organisms"]
ks = config["k"]

rule all:
    input:
        expand(path_results + ".dir_created", k=ks)

rule check_config_paths:
    input:
        config="config/config.yaml"
    output:
        "not_found.txt"
    shell:
        "python scripts/check_config_paths.py --config {input.config} --output {output} --checklist scripts"
rule create_directories:
    input:
        "not_foud.txt"
    output:
        touch(path_results + ".dir_created")
    shell:
        """
        mkdir -p {path_results} {path_final} {path_log} {path_bench} {path_checked}
        """
